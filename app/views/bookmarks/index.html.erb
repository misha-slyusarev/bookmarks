<p id="notice"><%= notice %></p>

<%= form_tag bookmarks_path, method: 'get', id: "bookmarks_search" do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", name: nil %>
  </p>
<% end %>

<h1>Bookmarks</h1>

<table class="table">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookmarks.each do |bookmark| %>
      <tr>
        <td><%= link_to bookmark.title, bookmark %></td>
        <td><%= link_to 'Edit', edit_bookmark_path(bookmark), class: 'btn btn-info btn-xs' %></td>
        <td><%= link_to 'Destroy', bookmark, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_bookmark_path, class: 'btn btn-primary btn-xs' do %>
  <i class="glyphicon glyphicon-plus"></i> New Bookmark
<% end %>
